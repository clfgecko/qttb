<div class="container-fluid" ng-controller="UserChangePasswordController">
    <div class="page-content__header">
        <div>
            <h2 class="page-content__header-heading">Thay đổi mật khẩu</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form id="formDemo" enctype="multipart/form-data" name="formDemo">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="row" style="margin-bottom:10px;">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Mật khẩu cũ</label>
                                                <input type="password" class="form-control" ng-model="PasswordOld" name="PasswordOld">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-bottom:10px;">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Mật khẩu mới</label>
                                                <input type="password" class="form-control" ng-model="PasswordNew" name="PasswordNew">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-bottom:10px;">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Nhập lại mật khẩu mới</label>
                                                <input type="password" class="form-control" ng-model="PasswordReNew" name="PasswordReNew">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer modal-footer--center">
                    <div class="row" style="width:100%; height: 30px;">
                        <div class="col-lg-12">
                            <div class="form-group" style="float:right">
                                <button class="btn btn-info icon-left btn-sm mr-3" type="button" ng-click="ChangePassword()">
                                    Lưu <span class="btn-icon mdi mdi-content-save-all"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/app/Controller/UserChangePasswordController.js"></script>
}


