
@{
    ViewBag.Title = "GetProfile";
}
@model WebApp.Models.ViewProfile

    <div class="content-wrapper" style="        min-height: 1419.6px; margin-left: 0px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-12">
                        <h1>Thông tin tài khoản</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">

                        <!-- Profile Image -->
                        <div class="card card-primary card-outline">
                            <div class="card-body box-profile">
                                <div class="text-center">
                                    @if (!string.IsNullOrEmpty(Model.Avartar))
                                    {
                                        <img class="profile-user-img img-fluid img-circle" src="@Model.Avartar" alt="" class="card-widget-a__user-image rounded-circle">
                                    }
                                    else
                                    {
                                        <img class="profile-user-img img-fluid img-circle" src="~/Content/Images/noimg.png" alt="" class="card-widget-a__user-image rounded-circle">
                                    }
                                </div>

                                <h3 class="profile-username text-center">@Model.Name</h3>

                                <p class="text-muted text-center">@Model.UserName</p>

                                <ul class="list-group list-group-unbordered mb-3">
                                    <li class="list-group-item">
                                        <b>SĐT</b> <a class="float-right">@Model.Phone</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Email</b> <a class="float-right">@Model.Email</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Trạng thái</b> <a class="float-right">
    @{
        var status = "Sử dụng";
        status = Model.Status ? "Sử dụng" : "Không sử dụng";
    }

    @status
</a>
                                    </li>
                                </ul>

                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                       
                    </div>
                    
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>

