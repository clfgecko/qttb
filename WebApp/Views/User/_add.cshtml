<div class="modal-header">
    <h4 class="modal-title">Thêm mới tài khoản</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close" ng-click="cancel()">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form class=" col-md-12" id="formSubmit">
        <div class="row">
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tên truy cập</label>
                            <input type="text" class="form-control" ng-model="model.UserName" name="UserName">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Nhóm quyền</label>
                            <select class="form-control select2" ui-select2 ng-model="model.GroupID" name="GroupID">
                                <option value="">Chọn quyền</option>
                                <option ng-repeat="item in ListUserGroup" value="{{item.ID}}">{{item.Name}}</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Họ và tên</label>
                            <input type="text" class="form-control" ng-model="model.Name" name="Name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input type="number" ng-pattern="ph_numbr" maxlength="10" name="Phone" class="form-control" ng-model="model.Phone">
                            <span ng-show="formDemo.Phone.$error.pattern">Hãy nhập số điện thoại đúng định dạng!</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" name="Email" ng-model="model.Email">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Trạng thái</label>
                            <select class="form-control select2" ui-select2 ng-model="model.Status" name="Status">
                                <option ng-repeat="item in ListStatus" value="{{item.ID}}">{{item.Name}}</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <img style="width:100%" id="pathPhoto" src="~/Assest/dist/img/avatar.png" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Ảnh đại diện</label>
                    <div class="custom-file">
                        <input type="text" hidden class="form-control" ng-model="model.Avartar">
                        <input id="filePhoto" name="filePhoto" type="file" onchange="angular.element(this).scope().SelectFile(event)" class="custom-file-input">
                        <label for="filePhoto" id="lableFile" class="custom-file-label text-truncate">Chọn file...</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" ng-model="model.Address">
                </div>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" ng-click="submit()">Lưu</button>
    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="cancel()">Hủy</button>
</div>